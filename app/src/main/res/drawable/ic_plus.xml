<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 水平线段 -->
    <item
        android:width="24dp"
        android:height="4dp"
        android:top="10dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- 垂直线段 -->
    <item
        android:width="4dp"
        android:height="24dp"
        android:top="0dp"
        android:left="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>